<ol reversed>
  {% for post in collections.post | reverse %}
    {%- set date = post.date | readableDate -%}
    <li class="o-block">
      <article id="{{ date | slug }}" class="o-constrain-content">
        <header>
          <h3><a href="#{{ date | slug }}">{{ date }}</a></h3>
        </header>
        <div>
          {{ post.templateContent | safe }}
        </div>
      </article>
    </li>
  {% endfor %}
</ol>
