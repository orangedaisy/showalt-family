---
layout: "layouts/default.njk"
---

<header>
  <div>
    <h2>{{ title }}</h2>
    <ul>
    {%- for tag in tags -%}
      <li><a href="/recipes/{{ tag.toLowerCase() }}/">{{ tag }}</a></li>
    {%- endfor -%}
    </ul>
  </div>
</header>

<div>
  <section>
    <h3>Ingredients</h3>
    <ul>
    {%- for ingredient in ingredients -%}
      <li>{{ ingredient }}</li>
    {%- endfor -%}
    </ul>
  </section>

  <section>
    <h3>Method</h3>
    {{ method | markdownify | safe }}
  </section>

  {%- if source -%}
    <section>
      <h3>Source</h3>
      {{ source | markdownify | safe }}
    </section>
  {%- endif -%}
</div>
