---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
permalink: /recipes/{{ tag }}/
---
<h1>Tagged {{ tag }}</h1>

<ol>
  {%- set taglist = collections[ tag ] -%}
  {%- for recipe in taglist | reverse -%}
    <li>
      <a href="{{ recipe.url | url }}">{{ recipe.data.title }}</a>
    </li>
  {%- endfor -%}
</ol>
