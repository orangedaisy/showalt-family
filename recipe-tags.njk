---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
permalink: /recipes/{{ tag }}/
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    Recipes tagged '{{ tag }}' | Showalter Recipes
  </title>
  <link rel="stylesheet" href="/assets/css/recipes.css">
</head>
<body>
  <nav>
    <a href="/recipes/" title="Return to recipes list">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H6M12 5l-7 7 7 7"/></svg>
    </a>
  </nav>

  <article>
    <header>
      <h1>{{ tag }}</h1>
    </header>

    <div>
      <section>
        <h2>Recipes tagged '{{ tag }}'</h2>
        <ol>
          {%- set taglist = collections[ tag ] -%}
          {%- for recipe in taglist | reverse -%}
            <li>
              <a href="{{ recipe.url | url }}">{{ recipe.data.title }}</a>
            </li>
          {%- endfor -%}
        </ol>
      </section>
    </div>
  </article>

</body>
</html>
